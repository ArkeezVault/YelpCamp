<% include ../partials/header %>
        <div class="container">
            <br>
            <div style="width: 50%; margin: 25px auto;">
                <h3>New Campground</h3>
                <form action='/campgrounds' method='POST'>
                    <div class="form-group">
                       <input class="form-control" type="text" name="name" placeholder='Campground Name' autocomplete="off"> 
                    </div>
                    <div class="form-group">
                        <input class="form-control" type="text" name="image" placeholder='Image URL' autocomplete="off">
                    </div>
                    <div class="form-group">
                        <textarea class="form-control" name="description" rows="5" cols="30" placeholder="Campground Description"></textarea>
                    </div>
                    <input class="btn btn-primary" type="submit" value="Add Campground">
                </form>
                <br><br>
                <a href="/campgrounds">Go Back</a>
            </div>
        </div>
<% include ../partials/footer %>